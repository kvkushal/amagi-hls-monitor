THUMBNAIL_HEIGHT=90
SPRITE_GRID_WIDTH=10
SPRITE_GRID_HEIGHT=10

# Logging
LOG_ROTATION_HOUR=0
LOG_COMPRESS_DAYS=7
LOG_DELETE_DAYS=30

# Performance
