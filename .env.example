# Application
APP_NAME=StreamProbeX
APP_VERSION=1.0.0
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
CORS_ORIGINS=["http://localhost","http://localhost:3000","http://localhost:80"]

# Storage
LOGS_DIR=./logs
DATA_DIR=./data
THUMBNAILS_DIR=./data/thumbnails
